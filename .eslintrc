{
  "ecmaFeatures" : {
    "arrowFunctions" : true,
    "blockBindings"  : true,
    "classes"        : true,
    "defaultParams"  : true,
    "destructuring"  : true,
    "jsx"            : true,
    "modules"        : true,
    "restParams"     : true,
    "templateStrings": true
  },
  "globals" : {
    "setTimeout" : true,
    "console": true
  },
  "rules" : {
    "global-strict"   : 0,
    "key-spacing"     : [0, { "beforeColon": false, "afterColon": true }],
    "no-console"      : 0,
    "no-multi-spaces" : 0,
    "quotes"          : [1, "single", "avoid-escape"]
  }
}
